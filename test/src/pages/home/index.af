{
  "type": "module",
  "script": "./index.js",
  "variables": {
    "theme": {
      "type": "string",
      "reactive": true,
      "value": "dark"
    },
    "backgroundColor": {
      "type": "string",
      "value": "${theme === 'dark' ? '#223' : '#fff'}"
    },
    "textColor": {
      "type": "string",
      "value": "${theme === 'dark' ? '#fff' : '#555'}"
    },
    "num":{
      "type": "number",
      "value": 0,
      "reactive": true
    }
  },
  "view": {
    "name": "div",
    "props": {
      "style": {
        "width": "100%",
        "height": "100%",
        "background": "${backgroundColor}",
        "color": "${textColor}"
      }
    },
    "children": [
      {
        "name": "InfoBar"
      },
      {
        "name": "HelloWorld",
        "events": {
          "onClickChangeTheme": {
            "type": "setVariable",
            "name": "theme",
            "values": [
              "${theme === 'dark' ? 'light' : 'dark'}"
            ]
          }
        }
      },
      {
        "name": "div",
        "props": {
          "style": {
            "padding": 10,
            "display": "flex",
            "alignItems": "center",
            "gap": 10
          }
        },
        "children": [
          {
            "name": "Switch",
            "props": {
              "text": "-1"
            },
            "events": {
              "onClick": {
                "type": "script",
                "src": "./decrease.js",
                "values": []
              }
            }
          },
          {
            "name":"a",
            "text":"${(num+'').padStart(10, '0')}"
          },
          {
            "name": "Switch",
            "props": {
              "text": "+1"
            },
            "events": {
              "onClick": {
                "type": "script",
                "src": "./increase.js",
                "values": []
              }
            }
          }
        ]
      }
    ]
  }
}
