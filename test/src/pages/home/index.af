{
  "type": "module",
  "imports": [
    {
      "src": "./index.module.scss",
      "modules": [
        {
          "name": "default",
          "alias": "styles"
        }
      ]
    }
  ],
  "controllers": [
    "./controller/a.js",
    "./controller/b.js"
  ],
  "fields": {
    "myRef": {
      "type": "ref",
      "ref": true
    },
    "theme": {
      "type": "string",
      "reactive": true,
      "value": "dark"
    },
    "num": {
      "type": "number",
      "value": 0,
      "reactive": true
    },
    "userList": {
      "type": "array",
      "value": [
        {
          "id": "1",
          "name": "小明"
        },
        {
          "id": "2",
          "name": "小红"
        },
        {
          "id": "3",
          "name": "小刚"
        }
      ]
    }
  },
  "view": {
    "name": "div",
    "props": {
      "className": "${styles.home} ${styles[theme]}"
    },
    "children": [
      {
        "name": "InfoBar"
      },
      {
        "name": "HelloWorld",
        "events": {
          "onClickChangeTheme": {
            "type": "setField",
            "name": "theme",
            "values": [
              "${theme==='dark'?'light':'dark'}"
            ]
          }
        }
      },
      {
        "name": "div",
        "props": {
          "style": {
            "padding": 10,
            "display": "flex",
            "alignItems": "center",
            "gap": 10
          }
        },
        "children": [
          {
            "name": "Switch",
            "props": {
              "text": "-1"
            },
            "events": {
              "onClick": {
                "type": "hook",
                "name": "onDecrease",
                "values": []
              }
            }
          },
          {
            "name": "a",
            "text": "${(num+'').padStart(10,'0')}"
          },
          {
            "name": "Switch",
            "props": {
              "text": "+1"
            },
            "events": {
              "onClick": {
                "type": "hook",
                "name": "onIncrease",
                "values": []
              }
            }
          }
        ]
      },
      {
        "name": "ul",
        "children": [
          {
            "name": "li",
            "text": "${user.name}",
            "ref": "myRef",
            "props": {
              "key": "${key}"
            },
            "for": {
              "array": "userList",
              "item": "user",
              "key": "key"
            },
            "events": {
              "onClick": {
                "type": "hook",
                "name": "onClickTest",
                "values": [
                  "${user.name}",
                  "${user.id}"
                ]
              }
            }
          }
        ]
      },
      {
        "name": "div",
        "text": "看不见我",
        "if": "(num&1) === 0"
      }
    ]
  }
}
